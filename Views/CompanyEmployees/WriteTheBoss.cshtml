@model AFuturaCRMV2.Models.CompanyEmployee

@{
    ViewData["Title"] = "Create";
}

<h1>Write your boss mail and map your company.</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BossEmail" class="control-label">Write your boss e-mail</label>
                <input asp-for="BossEmail" class="form-control" />
                <span asp-validation-for="BossEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
