<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Milio CRM</title>
@*    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
*@    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AFuturaCRMV2.styles.css" asp-append-version="true" />
    <link href=" https://cdn.jsdelivr.net/npm/bootswatch@5.3.3/dist/lux/bootstrap.min.css " rel="stylesheet">
    <link href="/css/styles.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-black border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="color: white;">Milio CRM</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item text-center" style="color: white;">
                            <div>
                                <i class="fas fa-house"></i>
                            </div>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><p style="color: white;">Home</p></a>
                        </li>
                        @if (User.Identity.Name != null)
                        {
                            <li class="nav-item text-center">
                                <div>
                                    <i class="fas fa-person"></i>
                                </div>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Customers" asp-action="Index"><p style="color: white;">See all clients</p></a>
                            </li>
                            <li class="nav-item text-center">
                                <div>
                                    <i class="fas fa-plus"></i>
                                </div>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Customers" asp-action="Create"><p style="color: white;">Enter new client</p></a>
                            </li>
                            <li class="nav-item text-center">
                                <div>
                                    <i class="fas fa-person-running"></i>
                                </div>                                <a class="nav-link text-dark" asp-area="" asp-controller="Customers" asp-action="IndexPriority"> <p style="color: white;">Priority clients</p></a>
                            </li>
                            <li class="nav-item text-center">
                                <div>
                                    <i class="fas fa-plus"></i>
                                </div>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Documents" asp-action="Index"> <p style="color: white;">See all documents</p></a>
                            </li>
                        }
                        <li class="nav-item text-center">
                            <div>
                                <i class="fas fa-building"></i>
                            </div>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Companies" asp-action="Index"> <p style="color: white;">See your company</p></a>
                        </li>
                        @if (User.Identity.Name == "matijamaric994@gmail.com")
                        {
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AllUsers"> <p style="color: white;">Svi korisnici</p></a>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Milio CRM - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
